!!! XML
%playlist{:version=>1, :xmlns=>"http://xspf.org/ns/0/"}
  %trackList
    - @tracks.each do |path|
      - length = 0
      - title, artist = path.name_without_ext.split(" - ").reverse
      %track
        %location&= url_for(URI.encode path.basename.to_s)
        %creator&= artist
        %album&= path.parent.basename
        %title&= title
        %duration&= length * 1000
